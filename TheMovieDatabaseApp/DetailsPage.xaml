<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheMovieDatabaseApp.DetailsPage"
             BackgroundImage="Background"
	         Title = "The Movie Database" >
    <ContentPage.Content>
        <ScrollView>
            <Grid RowSpacing="5" ColumnSpacing="0" Margin="10,5" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="500"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Aspect="AspectFill" Margin="5" Grid.Row="0" >
                    <Image.Source>
                        <UriImageSource Uri="{Binding PosterUrl}" CachingEnabled="True" CacheValidity="5"/>
                    </Image.Source>
                </Image>
                <StackLayout Orientation="Horizontal"  Grid.Row="1">
                    <Label Text="{Binding Title}" Style="{StaticResource TitleLabel}" VerticalOptions="StartAndExpand"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal"  Grid.Row="2" Padding="2">
                    <Label Text="{Binding Overview}" Style="{StaticResource OverviewText}"/>
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
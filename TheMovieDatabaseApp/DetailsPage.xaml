<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheMovieDatabaseApp.DetailsPage"
             BackgroundColor="Black"
	         Title = "{Binding Title}" >
    <ContentPage.Content>
        <ScrollView>
            <Grid ColumnSpacing="0" RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="250" />
                    <RowDefinition Height="AUTO" />
                </Grid.RowDefinitions>

                <Image Source="{Binding PosterUrl}" Aspect="AspectFill" Margin="10"  Grid.Row="0" />
                <Image Source="ShadowOverlay" Aspect="Fill" VerticalOptions="End" HorizontalOptions="Fill" />

                <StackLayout Orientation="Horizontal"  VerticalOptions="Center"  Grid.Row="1" Spacing="5" Margin="10">
                    <Label Text="{Binding Summary}" Style="{StaticResource BodyLabel}"/>
                </StackLayout>
            </Grid>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>